{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "plugin:react/recommended",
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jasmine"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "warn",
        "no-console": "warn"
    }
}
